# TPV El Haido - Environment Variables
# Copy this file to .env or .env.local and adjust values as needed

# =============================================================================
# PERFORMANCE
# =============================================================================

# Force high performance mode (bypasses all performance detection)
# Set to 'true' to disable all low-performance optimizations
VITE_FORCE_HIGH_PERFORMANCE=false

# =============================================================================
# BACKEND / STORAGE
# =============================================================================

# Backend API URL (haido-db sidecar)
# Default: http://localhost:3000
VITE_API_URL=http://localhost:3000

# Request timeout in milliseconds
# Default: 10000 (10 seconds)
VITE_REQUEST_TIMEOUT=10000

# Storage mode: 'sqlite' | 'http' | 'indexeddb'
# - sqlite: Native SQLite via Tauri (recommended for production)
# - http: REST API via haido-db sidecar
# - indexeddb: Browser local storage (fallback/development)
# Note: This can also be changed in Settings panel at runtime
# VITE_STORAGE_MODE=sqlite

# =============================================================================
# AEAT VERI*FACTU
# =============================================================================

# AEAT sidecar port (when running in sidecar mode)
# Default: 3001
VITE_AEAT_SIDECAR_PORT=3001

# AEAT base URL (when running in external mode)
# Default: http://localhost:3001
VITE_AEAT_BASE_URL=http://localhost:3001

# AEAT request timeout in milliseconds
# Default: 30000 (30 seconds)
VITE_AEAT_REQUEST_TIMEOUT=30000

# AEAT sidecar startup timeout in milliseconds
# Default: 15000 (15 seconds)
VITE_AEAT_STARTUP_TIMEOUT=15000

# Maximum restart attempts for AEAT sidecar
# Default: 3
VITE_AEAT_MAX_RESTART_ATTEMPTS=3

# AEAT health check interval in milliseconds
# Default: 10000 (10 seconds)
VITE_AEAT_HEALTH_CHECK_INTERVAL=10000

# =============================================================================
# PRINTER
# =============================================================================

# Printer operation timeout in milliseconds
# Default: 3000 (3 seconds)
VITE_PRINTER_TIMEOUT=3000

# =============================================================================
# DEBUG
# =============================================================================

# Enable debug mode (shows debug indicator, extra logging)
# VITE_DEBUG_MODE=true

# =============================================================================
# TAURI / DESKTOP
# =============================================================================

# These are set automatically by Tauri, but can be overridden for testing
# TAURI_PLATFORM=windows
# TAURI_ARCH=x86_64
