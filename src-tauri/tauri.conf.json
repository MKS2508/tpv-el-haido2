{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TPV El Haido",
  "version": "0.1.0",
  "identifier": "com.elhaido.tpv",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "TPV: El Haido",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "default",
          "windows": ["*"],
          "permissions": [
            "core:default",
            "shell:default",
            "http:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/square-icon-256.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}
