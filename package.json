{
  "name": "tpv-el-haido",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:full": "bun run prebuild && concurrently -k -n LICENSE,TAURI -c cyan,magenta \"bun run license-server\" \"bun run tauri:dev\"",
    "dev:all": "bun run prebuild && concurrently -k -n LICENSE,DOCS,TAURI -c cyan,yellow,magenta \"bun run license-server\" \"bun run docs\" \"bun run tauri:dev\"",
    "prebuild": "bun run scripts/prebuild-sidecars.ts",
    "build": "tsgo --noEmit && vite build",
    "build:tsc": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "deploy:rpi": "npm run build && npm run tauri build -- --target aarch64-unknown-linux-gnu",
    "docs:rpi": "node --loader tsx generate-docs.ts || bun run generate-docs.ts",
    "build:rpi-full": "npm run deploy:rpi && npm run docs:rpi",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "lint:solid": "eslint src --config eslint.config.js",
    "lint:ox": "oxlint src",
    "format": "biome format --write src",
    "check": "biome check --write src && eslint src --config eslint.config.js",
    "typecheck": "tsgo --noEmit",
    "typecheck:tsc": "tsc --noEmit",
    "build:aeat-sidecar": "bun run scripts/build-aeat-sidecar.ts",
    "build:aeat-sidecar:all": "bun run scripts/build-aeat-sidecar.ts --target all",
    "seed": "bun run scripts/seed.ts",
    "seed:clear": "bun run scripts/seed.ts --clear",
    "license-server": "bun run --cwd apps/license-server dev",
    "license-server:build": "bun run --cwd apps/license-server build",
    "license-server:start": "bun run --cwd apps/license-server start",
    "docs": "bun run --cwd apps/haidodocs dev",
    "docs:build": "bun run --cwd apps/haidodocs build",
    "docs:start": "bun run --cwd apps/haidodocs start",
    "docs:typecheck": "bun run --cwd apps/haidodocs types:check",
    "apps:license": "bun run license-server",
    "apps:docs": "bun run docs"
  },
  "dependencies": {
    "@amad3v/solid-chart": "^1.0.4",
    "@kobalte/core": "^0.13.9",
    "@mks2508/better-logger": "^4.0.0",
    "@mks2508/no-throw": "^0.1.0",
    "@mks2508/shadcn-basecoat-theme-manager": "^4.0.2",
    "@motionone/solid": "^10.13.2",
    "@tanstack/solid-virtual": "^3.13.6",
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-http": "^2.5.6",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-shell": "^2.3.4",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-solid": "^0.563.0",
    "modern-screenshot": "^4.6.8",
    "solid-js": "^1.9.5",
    "solid-sonner": "^0.2.8",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "concurrently": "^9.1.2",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.9.6",
    "@types/esc-pos-encoder": "^1.3.4",
    "@types/jscodeshift": "^17.3.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/parser": "^8.23.0",
    "@typescript/native-preview": "^7.0.0-dev.20260127.1",
    "eslint": "^9.19.0",
    "eslint-plugin-solid": "^0.14.5",
    "jscodeshift": "^17.3.0",
    "oxlint": "^1.42.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-solid": "^2.11.6"
  }
}
